@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Club BAIST";
}

<div class="container mt-5">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm border">
        <div class="container-fluid py-5 text-center">
            <h1 class="display-4 fw-bold text-success">Club BAIST</h1>
            
            <div class="mt-4">
                <a asp-page="/Apply" class="btn btn-success btn-lg px-5 shadow">Become a Member</a>
            </div>
        </div>
    </div>

    <div class="row align-items-md-stretch">
        <div class="col-md-4">
            <div class="h-100 p-4 bg-white border rounded-3 shadow-sm text-center">
                <h2 class="h4">Membership</h2>
                <p>Join an exclusive community with tiered membership options including Gold, Silver, and Bronze packages tailored to your playing schedule.</p>
                <a asp-page="/Apply" class="btn btn-outline-success">Register</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-4 bg-white border rounded-3 shadow-sm text-center">
                <h2 class="h4">Tee Times</h2>
                <p>Book your next round. Shareholders enjoy 7-day priority, while other members can book 2 days in advance.</p>
                <a asp-page="/BookTeeTime" class="btn btn-success">Book Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-4 bg-white border rounded-3 shadow-sm text-center">
                <h2 class="h4">Player Scoring</h2>
                <p>Track your performance and handicap index following World Handicapping System (WHS) guidelines with our integrated scoring portal.</p>
                <button class="btn btn-outline-secondary" disabled>Demo</button>
            </div>
        </div>
    </div>
</div>
